{
  "name": "boinctasks-js",
  "productName": "BoincTasks Js",
  "appId": "com.efmer.boinctasksjs",
  "author": "eFMer <boinc@efmer.com>",
  "url": "https://efmer.com/",
  "license": "GPL-3.0-or-later",
  "version": "2.4.3",
  "description": "BoincTasks Js the best way to view BOINC",
  "copyright": "Copyright Â© 2024 ${author}",
  "main": "main.js",
  "scripts": {
    "package-winarm": "electron-packager . boinctasksjs  --executableName=boinctasksjs  --ignore=^/private --ignore=^/out --ignore=^/dist --ignore=^/download --ignore=how-to --ignore=^/snap --ignore=^/.vscode --icon=./appicons/icons/win/icon.ico  --overwrite --asar --platform=win32 --arch=arm64  --prune=true --out=out/winarm --appCopyright=\"(c) 2021-2024 eFMer\" --version-string.CompanyName=eFMer --version-string.ProductName=BoincTasks Js",
    "package-win32": "electron-packager  . boinctasksjs  --executableName=boinctasksjs  --ignore=^/private --ignore=^/out --ignore=^/dist --ignore=^/download --ignore=how-to --ignore=^/snap --ignore=^/.vscode --icon=./appicons/icons/win/icon.ico  --overwrite --asar --platform=win32 --arch=ia32   --prune=true --out=out/win32  --appCopyright=\"(c) 2021-2024 eFMer\" --version-string.CompanyName=eFMer --version-string.ProductName=BoincTasks Js",
    "package-win64": "electron-packager  . boinctasksjs  --executableName=boinctasksjs  --ignore=^/private --ignore=^/out --ignore=^/dist --ignore=^/download --ignore=how-to --ignore=^/snap --ignore=^/.vscode --icon=./appicons/icons/win/icon.ico  --overwrite --asar --platform=win32 --arch=x64    --prune=true --out=out/win64  --appCopyright=\"(c) 2021-2024 eFMer\" --version-string.CompanyName=eFMer --version-string.ProductName=BoincTasks Js",
    "package-linux": "electron-packager  . boinctasks-js --executableName=boinctasks-js --ignore=^/private --ignore=^/out --ignore=^/dist --ignore=^/download --ignore=how-to --ignore=^/snap --ignore=^/.vscode --icon=appicons/icons/png/512x512.png --overwrite --asar --platform=linux --arch=x64    --prune=true --out=out/linux  --appCopyright=\"(c) 2021-2024 eFMer\" --version-string.CompanyName=eFMer --version-string.ProductName=BoincTasks Js",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "makeA64": "electron-forge make --arch=arm64",
    "linux": "electron-builder --linux deb",
    "snapI64": "electron-builder --linux snap --x64",
    "snapA32": "electron-builder --linux snap --armv7l",
    "mac": "electron-builder --mac"
  },
  "build": {
    "asar": true,
    "appId": "com.efmer.boinctasksjs",
    "compression": "maximum",
    "afterSign": "build/notarize.js",
    "win": {
      "target": "nsis",
      "icon": "appicons/icons/png/512x512.png"
    },
    "linux": {
      "executableName": "boinctasks-js",
      "icon": "appicons/icons/mac/icon.icns",
      "target": [
        "deb"
      ]
    },
    "deb": {},
    "mac": {
      "appId": "com.efmer.boinctasksjs",
      "executableName": "Boinctasks Js",
      "icon": "appicons/icons/mac/icon.icns",
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "./appicons/icons/**",
      "./boinctasks/**",
      "./translations/**",
      "./index/**",
      "./render/**",
      "./preload",
      "main.js",
      "!.git",
      "!.github",
      "!.gitignore",
      "!.vscode",
      "!package.json",
      "!out",
      "!download",
      "!how-to",
      "!snap",
      "!private"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/efmer/boinctasks-js"
  },
  "keywords": [
    "boinc",
    "boinctasks"
  ],
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron/notarize": "^2.2.0",
    "@electron/packager": "^18.1.3",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "electron-osx-sign": "^0.5.0",
    "electron-packager": "^16.0.0"
  },
  "dependencies": {
    "highcharts": "^11.1.0",
    "nodemailer": "^6.9.4",
    "sortablejs": "^1.15.0",
    "xml2js": "^0.6.2"
  },
  "config": {
    "icon": "appicons/icons/mac/icon.icns",
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icon": "appicons/icons/mac/icon.icns",
        "executableName": "boinctasks-js",
        "name": "Boinctasks Js",
        "osxSign": {
          "hardened-runtime": true,
          "entitlements": "build/entitlements.mac.plist",
          "entitlements-inherit": "build/entitlements.mac.plist",
          "signature-flags": "library"
        },
        "osxNotarize": {},
        "ignore": [
          ".git",
          ".github",
          ".gitignore",
          ".vscode",
          "out",
          "download",
          "how-to",
          "snap",
          "private",
          "dist"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "config": {
            "icon": "appicons/icons/mac/icon.icns"
          },
          "platforms": [
            "darwin",
            "darwin-arm64"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "icon": "./appicons/icons/png/512x512.png"
          },
          "platforms": [
            "linux"
          ]
        }
      ]
    }
  }
}
